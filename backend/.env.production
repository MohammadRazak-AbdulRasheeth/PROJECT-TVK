# Production Environment Variables for Backend (Render)
# Set these as environment variables in your Render dashboard

# Database
MONGODB_URI=your_production_mongodb_uri

# JWT
JWT_SECRET=your-production-jwt-secret-key

# Stripe
STRIPE_SECRET_KEY=your-production-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-production-stripe-publishable-key

# Google OAuth (Set these in Render environment variables - DO NOT COMMIT REAL VALUES)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# Email
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-production-email-password

# Session
SESSION_SECRET=your-production-session-secret

# Frontend URL (Update this with your actual Netlify URL)
# Important: This must match your deployed Netlify URL for OAuth to work
FRONTEND_URL=https://your-netlify-site.netlify.app

# Port
PORT=10000